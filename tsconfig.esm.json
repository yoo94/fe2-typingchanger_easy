{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "esnext",
    "target": "es2022",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/esm",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["@types/node"],
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true,
        "useExtensions": true
      }
    ]

  },
  "include": ["src/**/*"]
}
